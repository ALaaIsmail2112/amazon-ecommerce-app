    <script>

        

function updateQuantity1(inputId, subtotalId, itemCountId, price,maxValue) {
    
    var quantityInput = document.getElementById(inputId);
    if (parseInt(quantityInput.value) >= maxValue) {
        return;
    }
    var subtotal = document.getElementById(subtotalId);
    var itemCount = document.getElementById(itemCountId);
    var subtotal_h1 = document.getElementById('subtotalll');

    var quantity = parseInt(quantityInput.value) + 1;
    var newSubtotal = parseInt(subtotal.textContent) + ( price);

    itemCount.innerText = parseInt(itemCount.innerText) + 1;
    if (isNaN(newSubtotal)) {
        newSubtotal = 0;
    }

    subtotal.textContent = newSubtotal;
    subtotal_h1.value = newSubtotal;
}

function updateQuantity2(inputId, subtotalId, itemCountId, price) {
    var quantityInput = document.getElementById(inputId);
    if (parseInt(quantityInput.value) < 1) {
        return;
    }
    var subtotal = document.getElementById(subtotalId);
    var itemCount = document.getElementById(itemCountId);

    var quantity = parseInt(quantityInput.value) - 1;
    var newSubtotal = parseInt(subtotal.textContent) - ( price);

    itemCount.innerText = parseInt(itemCount.innerText) - 1;
    if (isNaN(newSubtotal)) {
        newSubtotal = 0;
    }

    subtotal.textContent = newSubtotal;
}

    </script>
